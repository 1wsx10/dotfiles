#give me more info about the file, like if its a symlink
which() {
	LOC=$( command which "$@" )
	if [ -f "$LOC" ]; then
		#don't want to call "ls" with command.
		#we want it to use the above "ls" function
		ls -al "$LOC"
	fi
}

less() {
	command less -R "$@"
}

