alias gitgud='git log --graph $(git branch | sed "s/. //;/HEAD detached /d")'

cat() {
	if [ -d "$1" ]; then
		ls "$@"
	else
		command cat "$@"
	fi
}

which() {
	LOC=$(command which "$@")
	if [ "$LOC" != "" ]; then
		command ls -ahl "$LOC"
	fi
}

