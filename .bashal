cat() {
	if [[ -d $1 ]]; then
		ls "$@"
	else
		command cat "$@"
	fi
}

which() {
	LOC=$(/usr/bin/which $@)
	if [[ $LOC != "" ]]; then
		command ls -ahl $LOC --color
	fi
}

alias ip='/usr/bin/ip -color'
alias dmesg='/usr/bin/dmesg --color=always'

